# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# GraphQL Configuration
GRAPHQL_ENDPOINT=/graphql
GRAPHQL_PLAYGROUND=true

# Static Assets Configuration
# In development: serve local assets from /assets
# In production: use CDN URLs
ASSETS_MODE=development
ASSETS_CDN_URL=https://cdn.example.com
ASSETS_LOCAL_PATH=./assets

# Downstream Services
# Example microservice endpoints
USER_SERVICE_URL=http://user-service:8080
PRODUCT_SERVICE_URL=http://product-service:8080
NOTIFICATION_SERVICE_URL=http://notification-service:8080

# Service Mesh / Kubernetes
# Service mesh headers for tracing
SERVICE_NAME=conduites-bff
SERVICE_VERSION=1.0.0
CLUSTER_NAME=production

# Health Check Configuration
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Request Timeout
REQUEST_TIMEOUT=30000

# Rate Limiting (if needed)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100